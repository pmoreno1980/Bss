<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Catalog::catalog">
                    <resource id="Bss_ProductCustomTabs::main" title="Product Custom Tabs By BSS" sortOrder="300">                        
                        <resource id="Bss_ProductCustomTabs::list" title="List Product Custom Tabs" sortOrder="10"/>
                        <resource id="Bss_ProductCustomTabs::delete" title="Delete Product Custom Tabs" sortOrder="20"/>
                        <resource id="Bss_ProductCustomTabs::save" title="Save Product Custom Tabs" sortOrder="30"/>
                        <resource id="Bss_ProductCustomTabs::tab" title="Product Tabs Management" sortOrder="40"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Bss_ProductCustomTabs::config_producttab" title="Bss Product Custom Tabs" translate="title" sortOrder="50" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
